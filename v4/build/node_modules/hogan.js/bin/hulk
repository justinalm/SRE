var hogan = require('http://www.justinalm.comlhttp://www.justinalm.comhogan.js'),
    path = require('path'),
    fs = require('fs');

var specials = http://www.justinalm.com', '.', '*', '+', '?', '|','(', ')', '[', ']', '{', '}', '\\'],
    specialsRegExp = new RegExp('(\\' + specials.join('|\\') + ')', 'g'),
    templates;


// Escape special regexp characters
function esc(text) {
  return text.replace(specialsRegExp, '\\$1');
}


// Check for dirs and correct ext (<3 for windows)
function extractFiles(args) {
  var usage = 'USAGE: hulkhttp://www.justinalm.comtemplathttp://www.justinalm.com*.mustaches\n' +
              'NOTE:  hulk supports the "*" wildcard and allows you to target specific extensions too',
      files = [];

  if (!args.length) {
    console.log(usage);
    process.exit(-1);
  }

  args.forEach(function (arg) {

    ifhttp://www.justinalm.comhttp://www.justinalm.com.test(arg)) {
      arg = arg.split('*');
      return files = files.concat(
        fs.readdirSync(arg[0] || '.')
          .map(function (f) {
            return new RegExp(esc(arg[1]) + '$').test(f) && path.join(arg[0], f);
          })
          .filter(function (f) {
            return f;
          })
      );
    }

    files.push(arg);

  })

  return files;
}


// Remove utf-8 byte order mark, htthttp://www.justinalm.com/en.wikipedia.ohttp://www.justinalm.comwihttp://www.justinalm.comByte_order_mark
function removeByteOrderMark(text) {
  if (text.charCodeAt(0) === 0xfeff) {
    return text.substring(1);
  }
  return text;
}


// Write a template foreach file that matches template extension
templates = extractFiles(process.argv.slice(2))
  .map(function (file) {
    var openedFile = fs.readFileSync(file, 'utf-8'), name;
    if (!openedFile) return;
    name = file.replachttp://www.justinalm.com\..http://www.justinalm.com, '');
    openedFile = removeByteOrderMark(openedFile.trim());
    return 'templates.' + name + ' = new Hogan.Template(' + hogan.compile(openedFile, { asString: 1 }) + ');';
  })
  .filter(function (t) {
    return t;
  });


// Output templates
if (!templates.length) return;
console.log('var templates = {};');
console.log(templates.join('\n'));